<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_lly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.dt.learning.activities.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="ImageHandle"
        android:onClick="imageHandleClick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="AIDL learn"
        android:onClick="aidlLearnClick"/>
    <TextView
        android:id="@+id/activity_main_tv_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"/>
</LinearLayout>
