<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_lly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dt.learning.activities.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="ImageHandle"
            android:onClick="imageHandleClick"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="IPC Learn"
            android:onClick="aidlLearnClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Retrofit and Rxjava"
            android:onClick="rerxClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Socket"
            android:onClick="socketClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="drawable"
            android:textAllCaps="false"
            android:onClick="drawableClick"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="animation"
            android:onClick="animationClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="filePath"
            android:onClick="filePathClick"/>

        <Button
            android:id="@+id/activity_main_btn_aar_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aarTest"
            android:textAllCaps="false"
            android:onClick="aarTestClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="takePhoto"
            android:textAllCaps="false"
            android:onClick="takePhoto"/>
    </LinearLayout>


    <com.dt.learning.customerview.MyCircleView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:left_color="#bad8cb"
        app:right_color="#00ff00"/>

</LinearLayout>
