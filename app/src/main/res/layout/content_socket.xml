<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_socket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dt.learning.activities.SocketActivity"
    tools:showIn="@layout/activity_socket">

    <EditText
        android:id="@+id/content_socket_edt_to_server"
        android:layout_width="200dp"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/content_socket_btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textAllCaps="false"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:onClick="sendClick"/>

    <TextView
        android:id="@+id/content_socket_tv_from_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_socket_edt_to_server"/>

</RelativeLayout>
