<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_aidland_remote_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dt.learning.activities.IPCActivity"
    tools:showIn="@layout/activity_ipc">

    <TextView
        android:id="@+id/content_ipc_tv_aidl"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IPC through AIDL"
        android:textSize="@dimen/text_size_large"
        android:onClick="aidlClick"/>
    <TextView
        android:id="@+id/content_ipc_tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IPC through Messenger"
        android:textSize="@dimen/text_size_large"
        android:onClick="messengerClick"/>
</LinearLayout>
